        ></path>
      </svg>
      <span>LinkedIn</span>
    </a>
    <div class="mt-4 text-center">
      <span><b>franciscobogarin@gmail.com</b></span>
    </div>
  </div>
  <NextSectionButton sectionId="#experience" />
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const texts = [
      "Technical Lead",
      "Fullstack",
      "Frontend",
      "Backend",
      "Infra",
    ];

    let count = 0;
    let index = 0;
    let currentText = "";

    const container = document.getElementById("typeInText");

    setInterval(function () {
      // Checks that index isnt > to amount of texts
      if (index == texts.length) {
        index = 0;
      }

      if (currentText.length === texts[index].length) {
        currentText = "";
        count = 0;
        index++;
      }

      if (texts[index] && texts[index][count]) {
        currentText = currentText + texts[index][count];
        container!.textContent = currentText + "|";
        count++;
      }
    }, 200);
  });
</script>
